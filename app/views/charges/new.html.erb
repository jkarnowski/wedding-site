<div class="container">
	<div class="row">
		<div class="col span-12-d debug">
			<div id="honeymoon-stripe-form">
				<%= form_tag charges_path do %>
				<article>
					<% if flash[:error].present? %>
					<div id="error_explanation">
						<p><%= flash[:error] %></p>
					</div>
					<% end %>
					<label class="amount">Amount: <%= @amount %></label>
				</article>
				<% end %>
			</div>
		</div>
	</div>
</div>